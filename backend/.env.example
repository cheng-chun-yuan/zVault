# sbBTC Backend Environment Variables

# API Server Port
PORT=8080

# Logging Level (trace, debug, info, warn, error)
RUST_LOG=info

# Bitcoin Network Configuration
# BTC_RPC_URL=http://localhost:18332
# BTC_RPC_USER=your_rpc_user
# BTC_RPC_PASS=your_rpc_pass
# BTC_NETWORK=testnet

# Solana Configuration
# SOLANA_RPC_URL=https://api.devnet.solana.com
# SOLANA_WALLET_PATH=~/.config/solana/id.json

# FROST MPC Configuration (for threshold signing)
# FROST_COORDINATOR_URL=http://localhost:9000
# FROST_THRESHOLD=2
# FROST_PARTICIPANTS=3

# Database (if using persistent storage)
# DATABASE_URL=postgresql://user:pass@localhost/sbbtc

# Redis (for caching, if needed)
# REDIS_URL=redis://localhost:6379

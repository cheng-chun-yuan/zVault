{
  "name": "@zvault/sdk",
  "version": "1.0.0",
  "description": "ZVault SDK - Privacy-preserving Bitcoin to Solana bridge",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^1.3.0",
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.95.0",
    "bech32": "^2.0.0",
    "ed2curve": "^0.3.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/ed2curve": "^0.2.4",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@solana/web3.js": ">=1.90.0",
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "keywords": [
    "solana",
    "bitcoin",
    "bridge",
    "privacy",
    "zkp",
    "noir",
    "taproot"
  ],
  "author": "ZVault Team",
  "license": "MIT"
}

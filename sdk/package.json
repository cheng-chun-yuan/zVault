{
  "name": "@zvault/sdk",
  "version": "1.0.0",
  "description": "ZVault SDK - Privacy-preserving Bitcoin to Solana bridge",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "files": [
    "dist",
    "src",
    "circuits"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "copy-circuits": "mkdir -p circuits && cp ../noir-circuits/claim/target/zvault_claim.json circuits/ && cp ../noir-circuits/split/target/zvault_split.json circuits/ && cp ../noir-circuits/transfer/target/zvault_transfer.json circuits/ && cp ../noir-circuits/partial_withdraw/target/zvault_partial_withdraw.json circuits/"
  },
  "dependencies": {
    "@aztec/bb.js": "3.0.0-nightly.20251104",
    "@aztec/foundation": "^2.1.11",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^1.3.0",
    "@noir-lang/noir_js": "1.0.0-beta.15",
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.95.0",
    "@zkpassport/poseidon2": "^0.6.2",
    "bech32": "^2.0.0",
    "ed2curve": "^0.3.0",
    "poseidon-lite": "^0.3.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/ed2curve": "^0.2.4",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@solana/web3.js": ">=1.90.0",
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "keywords": [
    "solana",
    "bitcoin",
    "bridge",
    "privacy",
    "zkp",
    "noir",
    "taproot"
  ],
  "author": "ZVault Team",
  "license": "MIT"
}

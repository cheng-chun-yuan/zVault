{
  "name": "@zvault/sdk",
  "version": "2.0.2",
  "description": "ZVault SDK - Privacy-preserving Bitcoin to Solana bridge",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./prover": {
      "types": "./dist/prover/index.d.ts",
      "import": "./dist/prover/index.js",
      "default": "./dist/prover/index.js"
    },
    "./prover/web": {
      "types": "./dist/prover/web.d.ts",
      "import": "./dist/prover/web.js",
      "default": "./dist/prover/web.js"
    },
    "./prover/mobile": {
      "types": "./dist/prover/mobile.d.ts",
      "import": "./dist/prover/mobile.js",
      "default": "./dist/prover/mobile.js"
    },
    "./stealth": {
      "types": "./dist/stealth/index.d.ts",
      "import": "./dist/stealth/index.js",
      "default": "./dist/stealth/index.js"
    },
    "./pool": {
      "types": "./dist/pool/index.d.ts",
      "import": "./dist/pool/index.js",
      "default": "./dist/pool/index.js"
    },
    "./bitcoin": {
      "types": "./dist/bitcoin/index.d.ts",
      "import": "./dist/bitcoin/index.js",
      "default": "./dist/bitcoin/index.js"
    },
    "./solana": {
      "types": "./dist/solana/index.d.ts",
      "import": "./dist/solana/index.js",
      "default": "./dist/solana/index.js"
    },
    "./watcher": {
      "types": "./dist/watcher/index.d.ts",
      "import": "./dist/watcher/index.js",
      "default": "./dist/watcher/index.js"
    },
    "./watcher/web": {
      "types": "./dist/watcher/web.d.ts",
      "import": "./dist/watcher/web.js",
      "default": "./dist/watcher/web.js"
    },
    "./watcher/native": {
      "types": "./dist/watcher/native.d.ts",
      "import": "./dist/watcher/native.js",
      "default": "./dist/watcher/native.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "default": "./dist/react/index.js"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "import": "./dist/registry/index.js",
      "default": "./dist/registry/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "circuits"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "test:unit": "bun test src/ test/commitment.test.ts test/commitment-onchain.test.ts",
    "test:e2e": "bun test test/e2e/",
    "test:e2e:devnet": "NETWORK=devnet bun test test/e2e/",
    "test:e2e:claim": "bun test test/e2e/claim.test.ts",
    "test:e2e:split": "bun test test/e2e/split.test.ts",
    "test:e2e:partial": "bun test test/e2e/partial-public.test.ts",
    "test:e2e:nullifier": "bun test test/e2e/nullifier.test.ts",
    "test:e2e:tree": "bun test test/e2e/tree-consistency.test.ts",
    "test:real-proofs": "bun test test/e2e/real-proofs.test.ts --timeout 600000",
    "copy-circuits": "mkdir -p circuits && cp ../noir-circuits/target/zvault_*.json circuits/",
    "e2e": "bun run scripts/e2e-instructions.ts",
    "e2e:localnet": "NETWORK=localnet bun run scripts/e2e-instructions.ts",
    "e2e:devnet": "NETWORK=devnet bun run scripts/e2e-instructions.ts",
    "e2e:localnet-poseidon": "NETWORK=localnet POSEIDON_ENABLED=true bun run scripts/e2e-instructions.ts",
    "test:e2e:localnet-poseidon": "NETWORK=localnet POSEIDON_ENABLED=true bun test test/e2e/"
  },
  "dependencies": {
    "@noble/hashes": "^1.8.0",
    "@noir-lang/noir_js": "1.0.0-beta.15",
    "@solana-program/system": "^0.10.0",
    "@solana/kit": "^5.5.0",
    "@solana/spl-token": "^0.4.14",
    "bech32": "^2.0.0",
    "circomlibjs": "^0.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "keywords": [
    "solana",
    "bitcoin",
    "bridge",
    "privacy",
    "zkp",
    "noir",
    "taproot"
  ],
  "author": "ZVault Team",
  "license": "MIT"
}

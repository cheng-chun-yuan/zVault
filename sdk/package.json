{
  "name": "@zvault/sdk",
  "version": "1.3.0",
  "description": "ZVault SDK - Privacy-preserving Bitcoin to Solana bridge",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "files": [
    "dist",
    "src",
    "circuits"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "copy-circuits": "mkdir -p circuits && cp ../noir-circuits/target/zvault_*.json circuits/"
  },
  "dependencies": {
    "@aztec/bb.js": "3.0.0-nightly.20251104",
    "@noble/curves": "^1.8.2",
    "@noble/hashes": "^1.8.0",
    "@noir-lang/acvm_js": "1.0.0-beta.15",
    "@noir-lang/noir_js": "1.0.0-beta.15",
    "@noir-lang/noirc_abi": "1.0.0-beta.15",
    "@solana/kit": "^5.5.0",
    "@solana/web3.js": "^1.98.0",
    "@solana-program/system": "^0.10.0",
    "@solana-program/token": "^0.9.0",
    "@zkpassport/poseidon2": "^0.6.2",
    "bech32": "^2.0.0",
    "bs58": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "keywords": [
    "solana",
    "bitcoin",
    "bridge",
    "privacy",
    "zkp",
    "noir",
    "taproot"
  ],
  "author": "ZVault Team",
  "license": "MIT"
}
